    "required": ["id", "username", "email", "password", "phone", "userStatus"],  
    "properties": {  
        "id": {  
            "type": "integer",  
            "description": "Id of user"  
        },
        "username": {   
            "type": "string",  
            "description": "username"  
        },  
        "firstName": {  
            "type": "string",  
            "description": "First name"  
        },
        "lastName": {  
            "type": "string",  
            "description": "Last name"  
        },
        "email": {  
            "type": "string",  
            "description": "Email"  
        },
        "password": {  
            "type": "string",  
            "description": "Password"  
        },
        "phone": {  
            "type": "string",  
